{
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "ES2019",

    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ],
    "baseUrl": "./",
    "paths": {
      "not-a-log": ["vendor/not-a-log/"],
    },
  },
  "include": ["src/**/*.ts"]
}
