{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ],
    "baseUrl": "./",
    "paths": {
      "not-a-log": ["vendor/not-a-log/"],
    },
  },
  "include": ["src/**/*.ts"]
}
